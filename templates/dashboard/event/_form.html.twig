{{ form_start(form) }}

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 border-b border-gray-200 pb-8">
    <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Informations générales</h2>
        <p class="text-sm leading-6 text-gray-600">Les informations de base de l'évènement.</p>
    </div>
    <div class="col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-6">
            <div class="md:col-span-4">
                {{ form_row(form.imageFile) }}
            </div>
            <div class="md:col-span-4">
                {{ form_row(form.name) }}
            </div>
            <div class="md:col-span-4">
                {{ form_row(form.slug) }}
            </div>
            <div class="md:col-span-6">
                {{ form_row(form.description, { 'help': 'Ce texte sera affiché sur la page de l\'évènement.' }) }}
            </div>
            <div class="md:col-span-4">
                {{ form_row(form.isActive, { 'label': 'En ligne ?' }) }}
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8 border-b border-gray-200 pb-8">
    <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Calendrier</h2>
        <p class="text-sm leading-6 text-gray-600">Planifiez les dates de l'évènement.</p>
    </div>
    <div class="col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-6">
            <div class="md:col-span-3">
                {{ form_row(form.startDate) }}
            </div>
            <div class="md:col-span-3">
                {{ form_row(form.endDate) }}
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8 border-b border-gray-200 pb-8">
    <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Lieu</h2>
        <p class="text-sm leading-6 text-gray-600">Indiquez le lieu de l'évènement.</p>
    </div>
    <div class="col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-6">
            <div class="md:col-span-4">
                <address-autocomplete input-selector=".address-input">
                    {{ form_row(form.location) }}
                </address-autocomplete>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8 border-b border-gray-200 pb-8">
    <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Billetterie</h2>
        <p class="text-sm leading-6 text-gray-600">Configurez les paramètres de la billetterie.</p>
    </div>
    <div class="col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-6">
            <div class="md:col-span-3">
                {{ form_row(form.price, { 'attr': { 'placeholder': '0.00' }, 'label': 'Tarif' }) }}
            </div>
            <div class="md:col-span-3">
                {{ form_row(form.maxSpace, { 'attr': { 'placeholder': '0' }, 'label': 'Nombre de places' }) }}
            </div>
            <div class="md:col-span-3">
                {{ form_row(form.endSaleDate, { 'label': 'Date de fin de vente' }) }}
            </div>
        </div>
    </div>
</div>

<div class="mt-8 flex justify-end">
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</div>

{{ form_end(form) }}
