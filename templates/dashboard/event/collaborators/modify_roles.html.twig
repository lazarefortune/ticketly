{% extends 'dashboard/base.html.twig' %}

{% block title %}Modifier les rôles du collaborateur{% endblock %}

{% block body %}

    <div>
        <div>
            <a class="inline-flex items-center gap-2 text-sm/6 text-zinc-500 dark:text-zinc-400"
               href="{{ path('dashboard_event_collaborators', {'id': event.id}) }}">
                {{ icon('chevron-left') }}
                Retour
            </a>
        </div>

        <div class="mt-6">
            {{ form_start(form, { 'attr': { 'class': 'w-full'} }) }}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 border-b border-gray-200 dark:border-slate-800 pb-8">
                <div>
                    <h2 class="text-base font-semibold text-gray-900">Définir les rôles</h2>
                    <p class="text-sm text-gray-600 dark:text-slate-400">Définir les rôles du collaborateur</p>
                </div>
                <div class="col-span-2">
                    <div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-6">
                        <div class="md:col-span-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" class="form-input" readonly value="{{ collaborator.email }}" disabled>
                        </div>
                        <div class="md:col-span-full">
                            {{ form_row(form.roles) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-8 flex justify-end">
                <button type="submit" class="btn btn-primary">Modifier les rôles</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}


