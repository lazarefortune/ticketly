    {% include 'partials/flash.html.twig' with {floating: true, duration: 3} %}

    <div class="container-box">
        <div class="stack-large mt-10 mb-10 max-w-5xl mx-auto">
            {{ form_start(formProfile, {'attr': {'class': 'stack'}}) }}
            <div class="border-b border-gray-900/10 pb-10">
                <h2 class="text-base font-semibold">Mes informations</h2>
                <p class="text-sm text-zinc-500 mb-4">Vérifiez et mettez à jour vos informations personnelles ci-dessous.</p>


                <div class="grid sm:grid-cols-6 gap-x-6 gap-y-4">
                    <div class="md:col-span-full">
                        <div class="mt-2 flex flex-col md:flex-row md:justify-between md:items-center gap-x-3 gap-y-3">

                            <div class="flex items-center gap-x-5">
                                <img src="{{ app.user|avatar }}" alt="{{ app.user.fullname }}"
                                     class="w-20 h-20 rounded-full object-cover border-2 border-primary-900 dark:border-primary-300 p-0.5">
                                <div>
                                    <h4 class="h4">{{ app.user.fullname }}</h4>
                                    <p class="text-sm text-zinc-500">Inscrit <span class="lowercase">{{ app.user.createdAt|ago }}</span></p>
                                </div>
                            </div>

                            <div class="flex gap-x-2">
                                <button type="button" class="btn btn-sm">
                                    Charger une image
                                </button>
                                <button type="button" class="btn btn-sm bg-zinc-100">
                                    Supprimer l'image
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="md:col-span-3">
                        {{ form_row(formProfile.fullname) }}
                    </div>
                </div>
            </div>
            <div class="border-b border-gray-900/10 pb-12">
                <h2 class="text-base font-semibold">Coordonnées</h2>
                <p class="text-sm text-zinc-500 mb-4">Mettez à jour vos coordonnées pour rester en contact.</p>

                <div class="grid sm:grid-cols-6 gap-x-6 gap-y-4">
                    <div class="md:col-span-3">
                        {{ form_row(formProfile.email) }}
                    </div>
                    <div class="md:col-span-3">
                        {{ form_row(formProfile.phone) }}
                    </div>
                </div>
            </div>

            <div class="mt-6 flex items-center justify-end gap-x-6">
                <button type="submit" class="btn btn-primary">
                    Enregistrer les modifications
                </button>
            </div>
            {{ form_end(formProfile) }}
        </div>

        <div class="stack-large mb-10 max-w-5xl mx-auto">
            <div class="border-b border-gray-900/10 pb-12">
                <h2 class="text-base font-semibold">Sécurité du compte</h2>
                <p class="text-sm text-zinc-500 mb-4">Changez votre mot de passe pour sécuriser votre compte.</p>

                <a href="" class="btn">
                    {{ icon('lock') }}
                    <span>Modifier mon mot de passe</span>
                </a>
            </div>
        </div>

        <div class="stack-large mb-10 max-w-5xl mx-auto">
            <div class="pb-12">
                <h2 class="text-base font-semibold">Suppression de compte</h2>
                <p class="text-sm text-zinc-500 mb-4">La suppression de votre compte est définitive. Vous disposez de 7 jours pour changer d'avis.</p>

                <button class="btn btn-light-danger2" data-modal-id="deleteAccountModal">
                    {{ icon('trash') }}
                    <span>Supprimer mon compte</span>
                </button>

                <modal-dialog id="deleteAccountModal" hidden="hidden" overlay-close>
                    <section class="modal-box">
                        <header>Confirmer la suppression</header>
                        <button data-dismiss aria-label="Close" class="modal-close">
                            {{ icon('x') }}
                        </button>

                        <div class="stack">
                            <p class="text-red-900">Attention : Vous êtes sur le point de supprimer votre compte.</p>
                            <p class="text-zinc-500">Cette action est irréversible et entraînera la perte définitive de toutes vos données.</p>
                            <p class="text-zinc-500">
                                Pour confirmer la suppression, veuillez saisir votre mot de passe. Le compte sera automatiquement supprimé dans un délai de 7 jours.
                            </p>

                            {{ form_start(formDeleteAccount, {'attr': {'class': 'stack'}}) }}

                            {{ form_row(formDeleteAccount.password) }}

                            <div class="text-end">
                                <button type="submit" class="btn btn-light-danger">
                                    {{ icon('trash') }}
                                    <span>Confirmer la suppression</span>
                                </button>
                            </div>
                            {{ form_end(formDeleteAccount) }}
                        </div>

                    </section>
                </modal-dialog>

            </div>
        </div>

    </div>

