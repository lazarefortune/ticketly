{% import 'admin/appointment/macros.twig' as element %}

<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
    {% for appointment in appointments %}
        <article
                class="rounded-md border-thin border-slate-300 bg-white shadow-custom relative">
            <div class="px-4 py-3 border-b border-slate-200 rounded-t-md flex justify-between items-center">
                <!-- Mettre en avant le nom du client -->
                <h3 class="text-base font-medium text-slate-800 flex items-center">
                    {{ appointment.date|date('d/m/Y') }}
                </h3>
                <div>
                    {{ element.status_badge(appointment) }}
                </div>
            </div>
            <div class="px-4 py-3">
                <div class="grid grid-cols-2 gap-4">
                    <div class="col-span-1 flex justify-start items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-slate-100 flex justify-center items-center">
                            {{ icon('user') }}
                        </div>
                        <div class="text-sm text-slate-500">
                            <h4 class="text-slate-400">
                                Nom
                            </h4>
                            <p class="text-slate-800">
                                {{ appointment.client.fullname }}
                            </p>
                        </div>
                    </div>
                    <div class="col-span-1">
                        <div class="text-sm text-slate-500">
                            <h4 class="text-slate-400">
                                Service
                            </h4>
                            <p class="text-slate-800">
                                {{ appointment.prestation.name }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4 mt-4">
                    <div class="col-span-1 flex justify-start items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-slate-100 flex justify-center items-center">
                            {{ icon('calendar') }}
                        </div>
                        <div class="text-sm text-slate-500">
                            <h4 class="text-slate-400">
                                Date
                            </h4>
                            <p class="text-slate-800">
                                {{ appointment.date|date('d/m/Y') }}
                            </p>
                        </div>
                    </div>
                    <div class="col-span-1">
                        <div class="text-sm text-slate-500">
                            <h4 class="text-slate-400">
                                Créneau
                            </h4>
                            <p class="text-slate-800">
                                {{ appointment.startTime|date('H:i') }} - {{ appointment.endTime|date('H:i') }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="px-4 py-5 w-full">
                <a href="{{ path('admin_appointment_show', {'id': appointment.id}) }}"
                   class="text-slate-900 border border-slate-300 focus:ring-2 focus:ring-offset-2 focus:scale-95 focus:outline-none focus:ring-primary-900 hover:text-primary-900 hover:bg-primary-100 hover:border-primary-900 shadow-custom font-medium rounded-md text-sm px-5 py-2.5 inline-flex justify-center text-center w-full sm:w-auto"
                >
                    Voir les détails
                </a>
            </div>
        </article>
    {% endfor %}
</div>