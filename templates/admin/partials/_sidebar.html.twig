<aside class="admin-sidebar -translate-x-full lg:translate-x-0" id="sidebar">
    <div class="text-left text-2xl font-bold text-slate-900 dark:text-white flex items-center gap-2 mb-4">
        <a href="{{ path('dashboard_home') }}" class="flex items-center w-full gap-2">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="w-20 h-20 rounded-full object-cover">
        </a>
    </div>
    <nav class="sidebar--nav">
        <div>
            <div class="sidebar--nav-title">
                Menu
            </div>
            <ul class="flex flex-col gap-1">
