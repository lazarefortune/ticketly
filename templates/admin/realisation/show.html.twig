{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="dashboard-page-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
            <ol>
                <li>
                    <a href="{{ path('admin_home') }}">
                        <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"></path>
                        </svg>
                        Accueil
                    </a>
                </li>
                {{ icon('chevron-right') }}
                <li>
                    <a href="{{ path('admin_realisation_index') }}">Réalisations</a>
                </li>
                {{ icon('chevron-right') }}
                <li aria-current="page">
                    <span>{{ realisation.id }}</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="stack">

        <div class="flex flex-wrap">
            <div class="w-full md:w-1/2">
                <div class="mb-6">
                    <h5 class="text-xl font-bold mb-2">
                        Date de la réalisation
                    </h5>
                    <p class="text-lg">
                        {{ realisation.date|date('d/m/Y') }}
                    </p>
                </div>
            </div>

            <div class="w-full md:w-1/2">
                <div class="mb-6">
                    <h5 class="text-xl font-bold mb-2">
                        Image(s)
                    </h5>
                    {% for image in realisation.images %}
                        <div class="mb-2">
                            <img src="{{ asset('uploads/images/realisations/' ~ image.name) }}" alt="{{ image.name }}"
                                 width="100" class="js-image-modal realisation_gallery_item_image"
                                 id="myImg{{ loop.index }}">
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>

        <div class="flex justify-between items-center mt-6">
            <a href="{{ path('admin_realisation_edit', {id: realisation.id}) }}"
               class="btn-md btn-primary">
                <span>
                    Modifier
                </span>
            </a>
        </div>
    </div>

{% endblock %}
