{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="dashboard-page-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
            <ol>
                <li>
                    <a href="{{ path('admin_home') }}">
                        <svg class="h-3 w-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"></path>
                        </svg>
                        Accueil
                    </a>
                </li>
                {{ icon('chevron-right') }}
                <li>
                    <a href="{{ path('admin_users_index') }}">
                        <a href="{{ path('admin_users_index') }}">
                            Utilisateurs
                        </a>
                </li>
                {{ icon('chevron-right') }}
                <li aria-current="page">
                    Modifier
                </li>
            </ol>
        </nav>
    </div>

    <div class="mt-6">
        {{ form_start(form) }}
        <div class="stack">
            <!-- user details in entity -->
            <div class="grid grid-cols-8 gap-4">
                <div class="col-span-full md:col-span-4">
                    <p class="text-sm text-gray-500">Informations de l'utilisateur</p>
                    <p>{{ entity.fullname }}</p>
                </div>

                {% if entity.dateOfBirthday %}
                    <div class="col-span-full md:col-span-4">
                        <p class="text-sm text-gray-500">Date de naissance</p>
                        <p>{{ entity.dateOfBirthday|date('d/m/Y') }}</p>
                    </div>
                {% endif %}

                <div class="col-span-full md:col-span-4">
                    <p class="text-sm text-gray-500">Adresse email</p>
                    <p>{{ entity.email }}</p>
                </div>

                {% if entity.phone %}
                    <div class="col-span-full md:col-span-4">
                        <p class="text-sm text-gray-500">Téléphone</p>
                        <p>{{ entity.phone }}</p>
                    </div>
                {% endif %}

            </div>

            <div class="stack">
                <div class="grid2 mt-3">
                    {{ form_row(form.roles, {
                        'label': 'Définissez le(s) rôle(s) de l\'utilisateur',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    {{ icon('save') }}
                    <span>
                        {{ button_label|default('Enregistrer') }}
                    </span>
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}

