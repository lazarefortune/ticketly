{{ form_start(form, {attr: {class: 'stacked'}}) }}

<section class="stack-large">
    <section class="stack">
        <h1 class="h3">
            Nouveau champ
        </h1>
        <div class="grid2">
            {{ form_row(form.label) }}
            {{ form_row(form.name) }}
        </div>
        <div class="grid2">
            {{ form_row(form.value) }}
            {{ form_row(form.type) }}
        </div>
    </section>

    <section>
        <button type="submit" class="btn-primary">Enregistrer</button>
    </section>

</section>

{{ form_end(form) }}