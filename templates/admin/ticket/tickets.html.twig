{% extends 'admin/base.html.twig' %}

{% block title %} Tickets {% endblock %}

{% block body %}

    <div class="dashboard-page-header">
        <nav class="breadcrumb" aria-label="Breadcrumb">
            <ol>
                <li>
                    <a href="{{ path('admin_home') }}">
                        <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" viewBox="0 0 20 20">
                            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"></path>
                        </svg>
                        Accueil
                    </a>
                </li>
                {{ icon('chevron-right') }}
                <li>
                    <span>Tickets</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="table-wrapper">
        <table class="table">
            <thead>
            <tr>
                <th>Numéro</th>
                <th>Évènement</th>
                <th>Validation</th>
                <th>Date d'expiration</th>
            </tr>
            </thead>
            <tbody>
            {% if tickets is empty %}
                <tr>
                    <td colspan="5">Aucune donnée disponible</td>
                </tr>
            {% endif %}
            {% for ticket in tickets %}
                <tr>
                    <td>
                        {{ ticket.ticketNumber }}
                    </td>
                    <td>
                        <a href="{{ path('admin_event_show', {id: ticket.event.id}) }}" class="table-cell-link"></a>
                        {{ ticket.event.name|truncate(25) }}
                    </td>
                    <td>{% if ticket.isUsed %}
                            <span class="text-green-900 bg-green-200 rounded px-2 py-1">Utilisé</span>
                        {% else %}
                            <span class="text-orange-900 bg-orange-200 rounded px-2 py-1">Non utilisé</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if ticket.expiresAt < 'now' %}
                            <span class="text-red-900 bg-red-200 rounded px-2 py-1">Expiré le {{ ticket.expiresAt|format_datetime('medium', 'short', locale='fr') }}</span>
                        {% else %}
                            {{ ticket.expiresAt|format_datetime('medium', 'short', locale='fr') }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

