{% extends 'blank.html.twig' %}

{% block title %}
    Installation du site
{% endblock %}

{% block body %}
    <section class="min-h-screen bg-white dark:bg-gray-900">
        <div class="flex flex-col md:flex-row w-full min-h-screen px-6 py-0 sm:py-8 lg:px-0 lg:py-0">
            <div class="flex flex-col items-center justify-center w-full min-h-screen lg:w-1/2">
                <div class="w-full md:max-w-lg">
                    <a href="{{ path('app_home') }}"
                       class="flex items-center justify-center text-xl font-semibold text-gray-900 dark:text-white">
                        <img class="w-20 h-20" src="{{ asset('images/app-logo.svg') }}" alt="{{ app_name }} logo">
                    </a>
                    <div class="w-full dark:bg-gray-800 dark:border-gray-700">
                        <h4 class="text-2xl sm:text-4xl text-primary-600 text-center font-semibold mb-4">
                            Installation du site
                        </h4>
                        {{ form_start(form) }}
                        <div class="space-y-4 md:space-y-6 sm:p-8">
                            {{ form_row(form.siteTitle) }}
                            {{ form_row(form.fullname) }}
                            {{ form_row(form.username) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.submit) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="hidden lg:flex lg:w-1/2">
                <img src="{{ asset('images/coiffure.webp') }}" alt="Outils de coiffure"
                     class="w-full h-full object-cover rounded-lg">
            </div>
        </div>
    </section>
{% endblock %}

