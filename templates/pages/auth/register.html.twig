{% extends 'blank.html.twig' %}

{% block title 'Inscription' %}

{% block body %}
    <div class="min-h-screen w-full grid grid-cols-8 justify-center">
        <!-- Section de gauche avec l'image -->
        <div class="hidden lg:flex col-span-5 p-8 2xl:p-20 flex-col justify-between min-h-screen auth-image">
            <div class="flex flex-col gap-4">
                <div class="flex justify-start">
                    <a href="{{ path('app_home') }}" class="text-2xl text-white font-medium tracking-tight hover:text-white-soft md:text-3xl mb-2 reveal">
                        {{ app_name }}
                    </a>
                </div>
            </div>
            <div>
                <p class="text-xl text-white reveal mb-4" data-delay=".2">
                    TicketLy nous a permis de gérer nos événements de manière efficace. Nous avons pu vendre plus de tickets et
                    gérer les inscriptions de manière plus simple.
                </p>
                <p class="text-sm font-medium text-white reveal" data-delay=".4">— Lazare Fortune, CEO de TicketLy</p>
            </div>
        </div>

        <!-- Section de droite avec le formulaire d'inscription -->
        <div class="col-span-full lg:col-span-3 w-full min-h-screen px-4 py-4">
            <div class="flex justify-center items-center h-full">
                {{ form_start(registrationForm, { 'attr': {'class': 'reveal'} }) }}
                <div class="w-full max-w-md grid grid-cols-3 gap-3">
                    <div class="col-span-full mb-4 flex justify-center">
                        <a href="{{ path('app_home') }}" class="block animate-fade-in-left font-hanken-grotesk text-3xl text-gray-800 dark:text-gray-100 font-medium leading-tight tracking-tight">
                            <img src="{{ asset('images/logo.png') }}" alt="{{ app_name }}" class="h-16">
                        </a>
                    </div>
                    <div class="col-span-full">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-2">Créer votre histoire</h2>
                        <p class="text-gray-400 dark:text-gray-400" data-delay=".1">
                            Retrouvez tous vos événements en un seul endroit.<br>Ne manquez plus aucun événement.
                        </p>
                    </div>

                    <div class="col-span-full">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger">{{ flash_error }}</div>
                        {% endfor %}
                    </div>

                    <div class="col-span-full">
                        {{ form_row(registrationForm.fullname) }}
                    </div>

                    <div class="col-span-full">
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class="col-span-full">
                        <div class="flex flex-col gap-1">
                            {{ form_label(registrationForm.plainPassword) }}
                            <div class="relative">
                                {{ form_widget(registrationForm.plainPassword, { 'attr': {'autocomplete': 'new-password'} }) }}
                                <div class="password-toggle">
                                    <button type="button" class="password-toggle-button" aria-label="Toggle password visibility">
                                        <span class="password-toggle-icon">
                                            <span class="icon-eye">{{ icon('eye', 16) }}</span>
                                            <span class="icon-eye-off hidden">{{ icon('eye-off', 16) }}</span>
                                        </span>
                                    </button>
                                </div>
                            </div>
                            <div class="form-error">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-span-full">
                        <password-verifier password-input-id="registration_form_plainPassword"></password-verifier>
                    </div>

                    <div class="col-span-full">
                        <div class="flex items-center">
                            {{ form_widget(registrationForm.agreeTerms, { 'id': 'agreeTerms', 'class': 'form-checkbox' }) }}
                            <label for="agreeTerms" class="ml-2 label">
                                J'accepte les <a href="{{ path('app_cgu') }}" class="link" target="_blank">conditions d'utilisation</a>
                            </label>
                        </div>
                        <div class="form-error">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="col-span-full mt-4">
                        <button type="submit" class="btn btn-md btn-primary w-full">Créer mon compte</button>
                    </div>
                </div>

                <div class="border border-gray-100 dark:border-gray-700 my-6"></div>

                <p class="text-sm text-center text-gray-500 dark:text-gray-400">Vous avez déjà un compte ?</p>
                <a href="{{ path('app_login') }}" class="btn btn-outline w-full mt-4">Connectez-vous</a>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
