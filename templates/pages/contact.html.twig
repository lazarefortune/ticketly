{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {% include 'partials/flash.html.twig' with {floating: true, duration: 3} %}

    <div class="page-header">
        <div class="container-box">
            <h1 class="h1">
                Me <span class="text-leading">contacter</span>
            </h1>
            <p class="text-muted">
                Vous pouvez me contacter en remplissant le formulaire ci-dessous.
            </p>
        </div>
    </div>

    <section class="container-box bg-slate-50 dark:bg-dark-soft-2 py-10">
        <div class="stack">

            {{ include('partials/flash.html.twig') }}

            {{ form_start(form,
                {'attr': {'class': 'stack'}}
            ) }}

            <div class="stack ">
                <div class="grid2">
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                </div>

                {{ form_row(form.subject) }}
                {{ form_row(form.message) }}
                {{ form_row(form.captcha) }}
            </div>

            <div class="text-end mt-2">
                <button type="submit" class="btn-md btn-primary">
                    <span>Envoyer le message</span>
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
